<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".view.login.ForgotPassword"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:id="@+id/tvRecoverTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Recover Password"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/tvRecoverSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Please enter your registered email to recover your password."
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:textAlignment="center" />

        <!-- Campo Email -->
        <EditText
            android:id="@+id/etRecoverEmail"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="@color/black"/>

        <!-- Botón Recover -->
        <Button
            android:id="@+id/btnRecover"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/buttonColor"
            android:drawablePadding="4dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="4dp"
            android:text="Recover"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <!-- Botón Back -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/buttonGreen"
            android:drawableStart="@drawable/ic_log"
            android:drawablePadding="4dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="4dp"
            android:text="Back"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>