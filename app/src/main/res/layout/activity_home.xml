<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".view.home.home">

    <!-- Texto Bienvenida -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Welcome  you !!"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botón Usuario -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/userboton"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_button_blue"
        android:drawableStart="@drawable/usuario"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="30dp"
        app:iconGravity="textStart"
        app:iconTint="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botón Recap -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRecap"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Recap"
        android:textColor="@color/buttonText"
        android:background="@drawable/rounded_button_blue"
        app:cornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome" />

    <!-- Icono Fuego -->
    <ImageView
        android:id="@+id/ivFire"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/fire_icon"
        android:src="@drawable/fuego"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnRecap" />

    <!-- Texto Streak -->
    <TextView
        android:id="@+id/tvStreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:text="Streak\n5 Days"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/ivFire"
        app:layout_constraintTop_toTopOf="@id/ivFire" />

    <!-- Botón Achievements -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAchievements"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Achievements"
        android:textColor="@android:color/black"
        android:background="@drawable/rounded_button_green"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/ivFire"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Register Mood -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegisterMood"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Register Mood"
        android:textColor="@android:color/black"
        android:background="@drawable/rounded_button_blue"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnAchievements"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Daily Exercises -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnExercises"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Daily exercises"
        android:textColor="@android:color/black"
        android:background="@drawable/rounded_button_blue"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnRegisterMood"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Emergency -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEmergency"
        android:layout_width="241dp"
        android:layout_height="82dp"
        android:layout_marginTop="24dp"
        android:text="Emergency"
        android:textColor="@android:color/black"
        android:background="@drawable/rounded_button_pink"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnExercises"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contenedor del fragmento (Trends) -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnEmergency"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
