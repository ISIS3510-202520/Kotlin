<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white"
    tools:context=".view.home.home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Contenedor horizontal para tÃ­tulo y botÃ³n de usuario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp"
            android:paddingHorizontal="16dp">

            <!-- Texto Bienvenida -->
            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Welcome you !!"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- BotÃ³n Usuario -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/userboton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/rounded_button_blue"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:icon="@drawable/usuario"
                app:iconGravity="textStart"
                app:iconTint="@android:color/black"
                app:cornerRadius="24dp" />
        </LinearLayout>

        <!-- Streak -->
        <TextView
            android:id="@+id/tvStreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”¥ Streak\n1 Days"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <!-- Botones principales -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAchievements"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_green"
            android:text="Achievements"
            android:textColor="@android:color/black"
            app:cornerRadius="16dp"
            android:layout_marginTop="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegisterMood"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/rounded_button_blue"
            android:text="How are you feeling this morning?"
            android:textColor="@android:color/black"
            app:cornerRadius="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnExercises"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:background="@drawable/rounded_button_blue"
            android:text="Daily exercises"
            android:textColor="@android:color/black"
            app:cornerRadius="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEmergency"
            android:layout_width="241dp"
            android:layout_height="82dp"
            android:layout_marginTop="28dp"
            android:backgroundTint="@color/buttonPink"
            android:text="Emergency"
            android:textColor="#000000"
            app:cornerRadius="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRecap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/rounded_button_blue"
            android:text="Recap"
            android:textColor="@color/buttonText"
            app:cornerRadius="16dp"/>

        <!-- Ãšltimos journals -->
        <TextView
            android:id="@+id/tvLastJournalsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last 5 Journals"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:id="@+id/containerJournals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"/>

        <!-- Fragmento dentro del flujo scroll -->
        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:visibility="visible" />

    </LinearLayout>
</ScrollView>
